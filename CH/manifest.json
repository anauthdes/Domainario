{
  "manifest_version": 2,

  "name": "Domainario",
  "description": "Simple extension for quick and easy URL appends and replacements with a click of a button or a tap of a shortcut.",
  "version": "0.0.0.1",
   "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": "domainario128.png"
  },
  "icons": { "16": "domainario16.png",
           "48": "domainario48.png",
          "128": "domainario128.png" },
  "permissions": [
     "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    "options.css",
    "options.js",
    "ScaledCap-Logo.svg"
  ],
  "background":{
    "scripts": ["backgroundcheck.js"]
  }
}
